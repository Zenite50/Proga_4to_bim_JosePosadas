#include<iostream>
#include<conio.h>

using namespace std;

int main(){
    //variables	
	int fila=3, columna=3;

	//declarada la matriz
	int mat[3][3];   	
	
	for(int i=0;i<fila;i++){
		for(int j=0;j<columna;j++){
           //menasaje para ingresar datos	  
		   cout<<"Ingrese el dato de la posicion "<<i+1<<","<<j+1<<": ";
            cin>>mat[i][j];  	
		}
	}
	cout<<"\nImprimiendo matriz...\n"; 
	for(int k=0;k<fila;k++){
		for(int l=0;l<columna;l++){
            cout<<" "<<mat[k][l]<<" ";          		
 	 }
     cout<<"\n";
  }  
  
	cout<<"\nImprimiendo matriz diagonal...\n"; 
	for(int m=0;m<fila;m++){
            cout<<" "<<mat[m][m]<<" ";          		
     cout<<"\n";
  }  
		
	
	
  return 0;
  getch();	
}
